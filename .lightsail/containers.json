{
  "webserver": {
    "image": ":${LIGHTSAIL_SERVICE_NAME}.webserver.latest",
    "environment": {
      "DB_HOST": "db",
      "DB_PORT": "3306",

      "MYSQL_ROOT_PASSWORD": "${MYSQL_ROOT_PASSWORD}",
      "MEETING_NOTES_BOT_DB_PASS": "${MEETING_NOTES_BOT_DB_PASS}",
      "ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}",
      
      "PYTHONDONTWRITEBYTECODE": "1",
      "PYTHONUNBUFFERED": "1"
    },
    "ports": {
      "80": "HTTP"
    }
  }
}
